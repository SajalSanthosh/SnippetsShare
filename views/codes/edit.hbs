<h1>
  {{title}}
</h1>

<form method="POST">
  <div class="form-group">
    <label for="title">Title:</label>
    <input name="title" id="title" class="form-control" type="text" value="{{code.title}}" required />

    <label for="name">Code:</label>
    <textarea class="form-control" rows="10" name="name" id="name" required>{{code.name}}</textarea>

    <label for="language">Language:</label>
    <select class="form-control" name="language" id="language">
      {{#each languages}}
        {{createOption this.name ../code.language }}
      {{/each}}
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>

</form>