{{#if messages}}
<div class="alert alert-danger">
  Invalid credentials
</div>
{{/if}}

<div class="signup-form">
  <form method="post">
    <h2>Login</h2>
    <p>Please fill in this form to login!</p>
    <hr>
    <div class="form-group">
      <input type="email" class="form-control" name="username" placeholder="Email" required="required">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required="required">
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
      <a class="btn btn-success btn-lg" href="/github">Login with Github</a>
    </div>
  </form>
  <div class="hint-text">Don't have an account? <a href="/register">Sign Up</a></div>
</div>